            <th>
                @Html.DisplayNameFor(model => model.StudenAge)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudenGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GurdianContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudenClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudenAge)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
